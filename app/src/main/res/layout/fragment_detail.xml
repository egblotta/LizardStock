<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LL"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="20dp"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".vista.fragments.DetailFragment">


        <ImageView
            android:id="@+id/imgProductoUpd"
            android:layout_width="500dp"
            android:layout_height="500dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/ic_image_black_24dp" />

        <TextView
            android:id="@+id/txtCodigoUpd"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="@string/cod_articulo"
            android:textSize="20sp"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/txtNombreUpd"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:textSize="30sp"
            android:textStyle="bold"
            android:hint="@string/nombre_articulo"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/etCantidadUpd"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:inputType="number"
            android:textAlignment="center"
            android:textSize="30sp"
            android:drawableStart="@drawable/ic_baseline_receipt_24"/>

        <EditText
            android:id="@+id/etPrecioUpd"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:inputType="numberDecimal"
            android:textAlignment="center"
            android:textSize="30sp"
            android:drawableStart="@drawable/ic_baseline_attach_money_24"/>

        <ProgressBar
            android:id="@+id/progressUpd"
            style="?android:attr/progressBarStyle"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:visibility="gone"
            android:layout_gravity="center|bottom"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/btnUpdate"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center|bottom"
            android:text="Actualizar"
            android:textSize="20sp"
            android:background="@drawable/curve_button"/>

    </LinearLayout>
